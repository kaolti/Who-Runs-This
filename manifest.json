{
  "manifest_version": 2,

  "name": "Who runs this",
  "description": "This extension shows who really runs a site",
  "version": "1.1",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'",
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "http://104.236.253.171/*",
    "http://api.corpwatch.org/*"
  ]
}

{
  "manifest_version": 2,

  "name": "Who runs this",
  "description": "This extension shows who really runs a site",
  "version": "1.3",

  "browser_action": {
    "default_popup": "popup.html"
  },
  "icons": { "16": "icon16.png",
           "48": "icon48.png",
          "128": "icon128.png"
  },
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com https://en.wikipedia.org https://whois.npff.co:*; object-src 'self';",
  "permissions": [
    "storage",
    "activeTab",
    "https://ajax.googleapis.com/",
    "https://whois.npff.co/*",
    "http://api.corpwatch.org/*",
    "https://en.wikipedia.org/*"
  ]
}
